@import '~Styles/global/colors'
@import '~Styles/global/layout'
@import '~Styles/global/type'

header
  margin-bottom: $margin-default

.logo
  padding-top: $padding-default
  padding-bottom: $padding-default

nav
  width: 100%

  display: flex
  flex-direction: row

#navigation
  flex: auto
  overflow-x: scroll
  overflow-y: visible

  ul
    width: 1000rem
    list-style: none

  li:first-of-type
    padding-left: 0

  li
    padding: 0 $padding-sm

    a
      float: left

      color: $black-ex-light
      line-height: 1.875rem - $padding-sm
      font-size: $font-size-default + 0.125rem

    a.active
      color: $purple
      font-weight: 700

#short-cuts
  flex: auto
  list-style: none

  .nav-link
    position: relative
    float: right

  .nav-link > a
    margin-left: $padding-default

.nav-link
  > a
    float: left
    font-size: $font-size-default
    font-weight: 700

    svg
      float: left
      height: 1.125rem
      width: 1.125rem
      fill: #9badb6

    &:hover svg
      fill: $purple

content
  flex-grow: 2

  .gimmecar-app-vertical-scroll
    overflow-y: auto

footer
  float: left
  margin: $margin-default 0
  align-self: flex-end
