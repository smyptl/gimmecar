@import '~Styles/global/colors'
@import '~Styles/global/layout'
@import '~Styles/global/type'

.panel-main-details,
.panel-details-link
  border-bottom: 1px solid $border-color-light

  dt,
  dd
    padding-top: $padding-sm
    padding-bottom: $padding-sm

    font-size: $font-size-default

  dt
    color: $black-light

  dd
    color: $black

.panel-main-details
  margin: 0
  float: left
  width: 100%
  background: $white-dark

  dt,
  dd
    float: left
    border-top: 1px solid $border-color-light

  dt
    width: 35%
    padding-left: $padding-default
    padding-right: $padding-sm
    color: $black-light

  dd
    width: 65%
    padding-right: $padding-default
    padding-left: $padding-sm
    color: $black

.panel-details-link
  position: relative
  margin: 0
  float: left
  width: 100%

  background: $white

  dt,
  dd
    width: 100%
    border-top: 0
    padding-left: $padding-default
    padding-right: $padding-default

  dt
    padding-bottom: $padding-ex-sm

  dd
    padding-top: $padding-ex-sm

  svg
    position: absolute
    top: 50%
    right: $padding-default
    margin-top: -0.375rem

    height: 0.75rem
    width: 0.75rem

  span.description
    font-size: 0.75rem
    color: $silver
