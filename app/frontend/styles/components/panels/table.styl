@import '~Styles/global/colors'
@import '~Styles/global/layout'
@import '~Styles/global/type'

.panel-table
  width: 100%
  position: relative
  border-collapse: collapse

  font-size: 0.8125rem
  text-align: left
  font-weight: 400

  .text-nowrap
    white-space: nowrap

  td:first-of-type,
  th:first-of-type
    padding-left: $padding-default

  td:last-of-type,
  th:last-of-type
    padding-right: $padding-default

  td,
  th
    margin: 0
    padding: $padding-sm

  thead
    background: $white-dark
    color: $black-ex-light
    font-size: 0.6875rem
    text-transform: uppercase
    border-top: 1px solid $border-color-light
    border-bottom: 1px solid $border-color-light

    th
      font-weight: 600

  tbody
    td.checkbox
      padding-right: 0
      width: 1rem + $padding-sm

    tr
      background: $background-color-panel
      border-top: 1px solid $border-color-light

      vertical-align: middle
      color: $black-light

      &:hover
        color: $black

    .clickable
      cursor: pointer

    tr.selected
      font-weight: 600
      color: $black

  tbody.alternate-color
    tr
      border-top: 0
      border-bottom: 0

    tr:nth-child(odd)
      background: $white-dark

    tr:nth-child(even)
      background: $background-color-panel

  tfoot
    border-top: 0.1875rem double $border-color-panel

    tr
      border-top: 1px solid $border-color-light

    td
      font-weight: 700

  span.description
    font-size: $font-size-default - 0.0625rem
    color: $silver

.panel-table.panel-table-key-pair
  table-layout: fixed
  margin-top: 0
  margin-bottom: 0

  tr
    vertical-align: top

  tbody,
  thead
    tr
      border-top: 1px solid $border-color-light

  td,
  th
    padding-top: $padding-sm
    padding-bottom: $padding-sm

  td:first-of-type,
  th:first-of-type
    padding-left: $padding-default
    padding-right: $padding-sm

    width: 35%
    text-align: left

  td:first-of-type
    color: $black-light

  td:nth-of-type(2)
  th:nth-of-type(2)
    padding-right: $padding-default
    padding-left: $padding-sm

    text-align: right

  td:nth-of-type(2)
    color: $black
